    <SeekBar
        android:id="@+id/slider_chance_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="96dp"
        android:max="100"
